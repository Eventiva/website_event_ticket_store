<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product Template Form View - Event Configuration -->
        <record id="product_template_form_event" model="ir.ui.view">
            <field name="name">product.template.form.event</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='service_tracking']" position="after">
                    <field name="event_id" invisible="service_tracking != 'event'" required="service_tracking == 'event'"/>
                    <field name="event_ticket_id" invisible="service_tracking != 'event'" required="service_tracking == 'event'"/>
                </xpath>
            </field>
        </record>

        <!-- Product Template Tree View - Event Information -->
        <record id="product_template_tree_event" model="ir.ui.view">
            <field name="name">product.template.tree.event</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='service_tracking']" position="after">
                    <field name="event_id" optional="hide"/>
                    <field name="event_ticket_id" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Product Template Search View - Event Filtering -->
        <record id="product_template_search_event" model="ir.ui.view">
            <field name="name">product.template.search.event</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='service_tracking']" position="after">
                    <field name="event_id" filter_domain="[('event_id', 'ilike', self)]"/>
                    <field name="event_ticket_id" filter_domain="[('event_ticket_id', 'ilike', self)]"/>
                </xpath>
                <xpath expr="//filter[@name='service']" position="after">
                    <separator/>
                    <filter string="Event Products" name="event_products" domain="[('service_tracking', '=', 'event')]"/>
                    <filter string="Configured Events" name="configured_events" domain="[('service_tracking', '=', 'event'), ('event_id', '!=', False), ('event_ticket_id', '!=', False)]"/>
                    <filter string="Unconfigured Events" name="unconfigured_events" domain="[('service_tracking', '=', 'event'), '|', ('event_id', '=', False), ('event_ticket_id', '=', False)]"/>
                </xpath>
            </field>
        </record>

        <!-- Product Product Form View - Event Information -->
        <record id="product_product_form_event" model="ir.ui.view">
            <field name="name">product.product.form.event</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='service_tracking']" position="after">
                    <field name="event_id" invisible="service_tracking != 'event'" required="service_tracking == 'event'"/>
                    <field name="event_ticket_id" invisible="service_tracking != 'event'" required="service_tracking == 'event'"/>
                </xpath>
            </field>
        </record>

        <!-- Product Product Tree View - Event Information -->
        <record id="product_product_tree_event" model="ir.ui.view">
            <field name="name">product.product.tree.event</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='service_tracking']" position="after">
                    <field name="event_id" optional="hide"/>
                    <field name="event_ticket_id" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Product Product Search View - Event Filtering -->
        <record id="product_product_search_event" model="ir.ui.view">
            <field name="name">product.product.search.event</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='service_tracking']" position="after">
                    <field name="event_id" filter_domain="[('event_id', 'ilike', self)]"/>
                    <field name="event_ticket_id" filter_domain="[('event_ticket_id', 'ilike', self)]"/>
                </xpath>
                <xpath expr="//filter[@name='service']" position="after">
                    <separator/>
                    <filter string="Event Products" name="event_products" domain="[('service_tracking', '=', 'event')]"/>
                    <filter string="Configured Events" name="configured_events" domain="[('service_tracking', '=', 'event'), ('event_id', '!=', False), ('event_ticket_id', '!=', False)]"/>
                    <filter string="Unconfigured Events" name="unconfigured_events" domain="[('service_tracking', '=', 'event'), '|', ('event_id', '=', False), ('event_ticket_id', '=', False)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

