<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Override Product Template to show event information -->
        <template id="product_template_event_info" inherit_id="website_sale.product" name="Product Template Event Info">
            <xpath expr="//div[@id='contact_us_wrapper']" position="before">
                <div t-if="product.service_tracking == 'event' and product.event_id and product.event_ticket_id" class="event-info mt-3">
                    <div class="card event-card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fa fa-calendar"></i> Event Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6 class="card-title" t-field="product.event_id.name"/>
                                    <p class="card-text">
                                        <i class="fa fa-calendar"></i>
                                        <span t-field="product.event_id.date_begin" t-options="{'widget': 'datetime'}"/>
                                        <span t-if="product.event_id.date_end and product.event_id.date_begin != product.event_id.date_end">
                                            - <span t-field="product.event_id.date_end" t-options="{'widget': 'datetime'}"/>
                                        </span>
                                    </p>
                                    <p class="card-text">
                                        <strong>Ticket Type:</strong> <span t-field="product.event_ticket_id.name"/>
                                    </p>
                                    <p t-if="product.event_ticket_id.description" class="card-text">
                                        <span t-field="product.event_ticket_id.description"/>
                                    </p>
                                </div>
                                <div class="col-md-4 text-right">
                                    <div class="ticket-availability">
                                        <span t-if="product.event_ticket_id.seats_limited" class="badge badge-info">
                                            <span t-esc="product.event_ticket_id.seats_available"/> Tickets available
                                        </span>
                                        <span t-else="" class="badge badge-success">
                                            Unlimited Tickets
                                        </span>
                                    </div>
                                    <div t-if="not product._is_event_ticket_available()" class="alert alert-warning mt-2">
                                        <small>This ticket is no longer available</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

        <!-- Override Add to Cart Button for Event Products -->
        <template id="product_template_event_ticket_button" inherit_id="website_sale.product" name="Product Template Event Ticket Button">
            <xpath expr="//a[@id='add_to_cart']" position="attributes">
                <attribute name="t-if">product.service_tracking != 'event' or (product.service_tracking == 'event' and product.event_id and product.event_ticket_id and product._is_event_ticket_available())</attribute>
                <attribute name="data-bs-toggle">product.service_tracking == 'event' and product.event_id and product.event_ticket_id and 'modal' or False</attribute>
                <attribute name="data-bs-target">product.service_tracking == 'event' and product.event_id and product.event_ticket_id and '#event_attendee_modal' or False</attribute>
                <attribute name="href">product.service_tracking == 'event' and product.event_id and product.event_ticket_id and '#' or False</attribute>
            </xpath>
            <xpath expr="//a[@id='add_to_cart']" position="after">
                <div t-if="product.service_tracking == 'event' and (not product.event_id or not product.event_ticket_id)" class="alert alert-warning">
                    <strong>Event Product:</strong> This product is not properly configured. Please contact the administrator.
                </div>
                <div t-if="product.service_tracking == 'event' and product.event_id and product.event_ticket_id and not product._is_event_ticket_available()" class="alert alert-danger">
                    <strong>Sold Out:</strong> This event ticket is no longer available for purchase.
                </div>
            </xpath>
        </template>

        <!-- Event Attendee Details Modal -->
        <template id="event_attendee_modal" name="Event Attendee Details Modal">
            <div class="modal fade" id="event_attendee_modal" tabindex="-1" role="dialog" aria-labelledby="event_attendee_modal_label" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <form id="event_attendee_form" method="post" action="/shop/cart/update" class="js_website_submit_form">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="modal-content">
                            <div class="modal-header align-items-center">
                                <h4 class="modal-title" id="event_attendee_modal_label">
                                    <i class="fa fa-calendar me-2"></i>
                                    Event Registration Details
                                </h4>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>

                            <div t-if="product.service_tracking == 'event' and product.event_id and product.event_ticket_id" class="modal-body">
                                <div class="alert alert-info">
                                    <strong><span t-field="product.event_id.name"/></strong><br/>
                                    <small>Please provide attendee details for each ticket you're purchasing.</small>
                                </div>

                                <input type="hidden" name="product_id" t-att-value="product.id"/>
                                <input type="hidden" name="add_qty" value="1"/>

                                <t t-set="counter" t-value="0"/>
                                <t t-set="input_type_by_question_type" t-value="{'name': 'text', 'email': 'email', 'phone': 'tel', 'company_name': 'text'}"/>

                                <!-- Dynamic Attendee Form based on Event Questions -->
                                <div class="attendee-form mb-4 p-3 border rounded">
                                    <h6 class="mb-3">
                                        <i class="fa fa-user me-2"></i>
                                        Attendee Details
                                    </h6>

                                    <!-- Event Questions for this attendee -->
                                    <div t-if="product.event_id.question_ids" class="row">
                                        <t t-foreach="product.event_id.question_ids" t-as="question">
                                            <div class="col-lg-6 mt-2" t-att-class="question.question_type=='text_box' and 'col-lg-12' or 'col-lg-6'">
                                                <t t-call="website_event.registration_event_question">
                                                    <t t-set="registration_index" t-value="1"/>
                                                </t>
                                            </div>
                                        </t>
                                    </div>

                                    <!-- Show message if no questions configured -->
                                    <div t-if="not product.event_id.question_ids" class="alert alert-info">
                                        <i class="fa fa-info-circle me-2"></i>
                                        No attendee questions are configured for this event. The ticket will be added to your cart.
                                    </div>
                                </div>

                                <!-- Hidden field for event ticket -->
                                <input type="hidden" name="1-event_ticket_id" t-att-value="product.event_ticket_id.id"/>
                            </div>

                            <div t-if="product.service_tracking == 'event' and product.event_id and product.event_ticket_id" class="modal-footer border-top">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-shopping-cart me-2"></i>Add to Cart
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </template>

        <!-- Override Product List Template to show event info -->
        <template id="product_template_event_list" inherit_id="website_sale.products_item" name="Product Template Event List">
            <xpath expr="//form[hasclass('oe_product_cart')]" position="inside">
                <div t-if="product.service_tracking == 'event' and product.event_id and product.event_ticket_id" class="event-info-small mt-2">
                    <small class="text-muted">
                        <i class="fa fa-calendar"></i>
                        <span t-field="product.event_id.name"/>
                        <span t-if="product.event_id.date_begin"> - <span t-field="product.event_id.date_begin" t-options="{'widget': 'date'}"/></span>
                    </small>
                    <br/>
                    <small class="text-muted">
                        <i class="fa fa-ticket"></i> <span t-field="product.event_ticket_id.name"/>
                        <span t-if="product.event_ticket_id.seats_limited" class="badge badge-sm badge-info ml-1">
                            <span t-esc="product.event_ticket_id.seats_available"/> left
                        </span>
                    </small>
                </div>
            </xpath>
        </template>

        <!-- Override Cart Template to show event info -->
        <template id="cart_template_event_info" inherit_id="website_sale.cart_lines" name="Cart Template Event Info">
            <xpath expr="//div[@t-foreach='website_sale_order.website_order_line']" position="inside">
                <div t-if="line.event_id and line.event_ticket_id" class="event-info-cart mt-2">
                    <small class="text-muted">
                        <i class="fa fa-calendar"></i> <span t-field="line.event_id.name"/>
                    </small>
                    <br/>
                    <small class="text-muted">
                        <i class="fa fa-ticket"></i> <span t-field="line.event_ticket_id.name"/>
                    </small>
                </div>
            </xpath>
        </template>

        <!-- CSS for Event Information Display -->
        <template id="event_info_css" name="Event Info CSS">
            <style>
                .event-card {
                    border: 1px solid #007bff;
                    border-radius: 0.375rem;
                }

                .event-card .card-header {
                    background-color: #007bff !important;
                    border-bottom: 1px solid #007bff;
                }

                .event-info-small {
                    font-size: 0.875rem;
                }

                .event-info-cart {
                    font-size: 0.875rem;
                }

                .ticket-availability .badge {
                    font-size: 0.75rem;
                }

                .event-info .alert {
                    margin-bottom: 0;
                    padding: 0.5rem;
                }
            </style>
        </template>

    </data>
</odoo>
