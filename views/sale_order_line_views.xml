<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sale Order Line Form View -->
        <record id="view_order_form_event_ticket" model="ir.ui.view">
            <field name="name">sale.order.line.form.event.ticket</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="event_id" invisible="service_tracking != 'event'" required="service_tracking == 'event'"/>
                    <field name="event_ticket_id" invisible="service_tracking != 'event'" required="service_tracking == 'event'"/>
                </xpath>
            </field>
        </record>

        <!-- Sale Order Line Tree View -->
        <record id="view_order_line_tree_event_ticket" model="ir.ui.view">
            <field name="name">sale.order.line.tree.event.ticket</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="event_id" optional="hide"/>
                    <field name="event_ticket_id" optional="hide"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

